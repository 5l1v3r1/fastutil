<project name="fastUtil" default="dist" basedir=".">

  <property name="src"    value="it"/>
  <property name="build"  value="build"/>

  <target name="init">
    <mkdir dir="${build}"/>
  </target>

  <target name="compile" depends="init">
    <javac srcdir="${src}" 
		   debug="on"
			optimize="on"
           destdir="${build}"
    />
  </target>

  <target name="dist" depends="compile">
    <jar jarfile="fastUtil.jar" 
         basedir="${build}"
    />
  </target>

</project>
